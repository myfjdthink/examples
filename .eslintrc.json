{
    "extends": "airbnb",
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true
    },
    "plugins": [
        "eslint-plugin-import"
    ],
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "class-methods-use-this": 0,
        "no-unused-vars": 1,
        "arrow-body-style": 0,
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "strict": [
            "error",
            "global"
        ],
        "no-underscore-dangle": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ]
    }
}