{
    "extends": "airbnb",
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true
    },
    "plugins": [
        "eslint-plugin-import"
    ],
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-console": 0,
        "no-param-reassign": 0,
        "class-methods-use-this": 0,
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "strict": [
            "error",
            "global"
        ]
    }
}